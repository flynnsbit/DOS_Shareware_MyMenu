                                             ;  the Schedule Table
                   I14RFrameIndex    =    3  ;Start at Frame Index 3

                   I14RCallBackAddr   = 2222:0200h ;Notification Address
                   I14RUserPktID      =      0000h ;Value to return in BX
                                                   ;  on Notifications
                   I14RDataAddress    = 2222:1000h ;Segment:Offset where
