                     DW 0020h, 0000h, 0000h, 0000h ;32, 0, 0, 0
                     DW 0010h, 0000h, 0000h, 0000h ;16, 0, 0, 0
                     DW 0010h, 0000h, 0000h, 0000h ;16, 0, 0, 0
